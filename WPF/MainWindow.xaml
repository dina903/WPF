<Window x:Class="WPF.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Sierpinski Attractor" Height="500" Width="800">

    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem x:Name="about" Header="_About" Click="MenuItem_Click">
                </MenuItem>
                <MenuItem x:Name="usage" DockPanel.Dock="Top" Header ="_Usage" Click="MenuItem_Click_1">
                </MenuItem>
            </Menu>
            <StackPanel Orientation="Vertical" Width="150" Background="LightGray">
                <ComboBox Margin="15,30,22,30" RenderTransformOrigin="0.464,0.536">
                    <ComboBoxItem IsSelected="True">2</ComboBoxItem>
                    <ComboBoxItem >4</ComboBoxItem>
                    <ComboBoxItem>6</ComboBoxItem>
                </ComboBox>
                <RadioButton GroupName="rb" Margin="15,0,0,0" Content="Red" IsChecked="True"/>
                <RadioButton GroupName="rb" Margin="15,0,0,0" Content="Blue" />
                <RadioButton GroupName="rb" Margin="15,0,0,0" Content="Olive" />
                <RadioButton GroupName="rb" Margin="15,0,0,0" Content="Orchid" />
                <RadioButton GroupName="rb" Margin="15,0,0,0" Content="Turquoise" />

                <Button Margin="15,180,22,0">Run</Button>
                <Button Margin="15,10,22,0">Clear</Button>
            </StackPanel>
            <Canvas x:Name="main_canvas" MouseRightButtonUp="main_canvas_MouseRightButtonUp" Background="White">
                <!--This doesnt resize so be careful-->

            </Canvas>
        </DockPanel>
    </Grid>
</Window>
